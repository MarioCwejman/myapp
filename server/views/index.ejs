<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Notes</title>
    <link rel="stylesheet" href="/server/public/style.css" />
    <script src="https://unpkg.com/htmx.org@1.9.12"></script>
  </head>
  <body>
    <h1>Notes</h1>

    <form hx-post="/notes" hx-target="#notes" hx-swap="afterbegin">
      <div>
        <label>Title</label><br />
        <input name="title" />
      </div>

      <div>
        <label>Body</label><br />
        <textarea name="body"></textarea>
      </div>

      <button>Add</button>
    </form>

    <hr />

    <div id="notes" hx-get="/notes" hx-trigger="load">
      Loading...
    </div>
  </body>
</html>
